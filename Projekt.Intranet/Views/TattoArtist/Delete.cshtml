@model FirmaData.Data.CMS.TattoArtists

@{
    ViewData["Title"] = "Usuń";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h2 class="mb-0">Potwierdzenie usunięcia artysty</h2>
        </div>

        <div class="card-body">
            <p class="fs-5">Czy na pewno chcesz usunąć tego artystę?</p>

            <dl class="row mb-4">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Imie)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Imie)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nazwisko)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nazwisko)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Przydomek)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Przydomek)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LataDoswiatczenia)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LataDoswiatczenia)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Specjalizacja)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Specjalizacja)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Opis)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Opis)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NumerTelefonu)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NumerTelefonu)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NumerKonta)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NumerKonta)</dd>
            </dl>

            <form asp-action="Delete" class="d-flex gap-3">
                <input type="hidden" asp-for="IdTattoArtists" />
                <a asp-action="Index" class="btn btn-dark btn-lg border-dark btn-outline-light">Anuluj</a>
                <button type="submit" class="btn btn-dark btn-lg border-dark btn-outline-light">Usuń</button>
            </form>
        </div>
    </div>
</div>
