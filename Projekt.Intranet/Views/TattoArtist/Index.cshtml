@model IEnumerable<FirmaData.Data.CMS.TattoArtists>

@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive m-4 col-sm-4 col-lg-12 d-flex justify-content-center">
    <div class="w-75 d-flex flex-column align-items-center">
        <div class="row w-100 mb-3 align-items-center">
            <div class="col text-center">
                <h3 class="mb-0 h2">Pracownik</h3>
            </div>
            <div class="col-auto ms-auto">
                <a asp-action="Create" class="btn btn-lg btn-dark border-dark btn-outline-light">Dodaj nową</a>
                <a asp-action="EksportExcelTattoArtist" class="btn btn-lg btn-dark border-dark btn-outline-light">Eksport do excela</a>
            </div>
        </div>
        <table id="datatable" class="table table-lg rounded table-hover table-dark text-md-center">
            <thead>
                <tr class="h4">
                    <th>
                        @Html.DisplayNameFor(model => model.Imie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nazwisko)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Przydomek)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LataDoswiatczenia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Specjalizacja)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Opis)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumerTelefonu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumerKonta)
                    </th>
                    <th></th>
                </tr>
                <tr>
                    <th><input type="text" placeholder="Szukaj imie" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Szukaj nazwisko" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Szukaj przydomek" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Szukaj lata doświatczenia" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Szukaj specjalizacje" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Szukaj opis" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Szukaj numer telefonu" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Szukaj email" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Szukaj numer konta" class="form-control form-control-sm" /></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr class="h5">
                    <td>
                        @Html.DisplayFor(modelItem => item.Imie)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nazwisko)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Przydomek)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LataDoswiatczenia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specjalizacja)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Opis)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumerTelefonu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumerKonta)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-md btn-light border-light btn-outline-dark" asp-route-id="@item.IdTattoArtists">Edit</a> |
                        <a asp-action="Delete" class="btn btn-md btn-light border-light btn-outline-dark" asp-route-id="@item.IdTattoArtists">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>