@model FirmaData.Data.CMS.TattoArtists

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center align-items-center flex-column">
    <h2 class="mt-4">Dodaj Artystę Tatuażu</h2>
    <div class="col-md-6">
        <form asp-action="Create" class="needs-validation text-white">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Imie" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Imie" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nazwisko" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Nazwisko" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Przydomek" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Przydomek" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="Przydomek" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LataDoswiatczenia" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="LataDoswiatczenia" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="LataDoswiatczenia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Specjalizacja" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Specjalizacja" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="Specjalizacja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Opis" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Opis" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumerTelefonu" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="NumerTelefonu" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="NumerTelefonu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Email" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumerKonta" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="NumerKonta" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="NumerKonta" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Index" class="btn btn-dark btn-lg border btn-outline-light">Powrót do listy</a>
                <input type="submit" value="Utwórz" class="btn btn-dark border-dark btn-lg btn-outline-light" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
