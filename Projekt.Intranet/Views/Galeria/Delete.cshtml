@model FirmaData.Data.CMS.Galeria

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h2 class="mb-0">Potwierdzenie usunięcia</h2>
        </div>
        <div class="card-body">
            <p class="fs-5">Czy na pewno chcesz usunąć ten rekord?</p>
            <dl class="row mb-4">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TattoArtists)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TattoArtists.Przydomek)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UrlZdjecia)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UrlZdjecia)</dd>
            </dl>
            <form asp-action="Delete" method="post" class="d-flex gap-3" id="deleteForm">
                <a asp-action="Index" class="btn btn-dark btn-lg border-dark btn-outline-light">Anuluj</a>
                <button type="button"
                        class="btn btn-dark btn-lg border-dark btn-outline-light"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal">
                    Usuń
                </button>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="fs-5">Czy na pewno chcesz usunąć ten rekord?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="deleteForm">Usuń</button>
            </div>
        </div>
    </div>
</div>