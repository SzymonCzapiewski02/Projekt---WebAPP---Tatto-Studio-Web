@model FirmaData.Data.CMS.Galeria
@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center align-items-center flex-column">
    <h2 class="mt-4">Dodawanie</h2>
    <div class="col-md-6">
        <form asp-action="Create" class="needs-validation text-white" novalidate>

            <div class="mb-4">
                <label asp-for="IdTattoArtists" class="form-label col-form-label-lg text-dark">Przydomek Artysty</label>
                <select asp-for="IdTattoArtists" class="form-select form-select-lg border-light btn-dark" asp-items="ViewBag.IdTattoArtists"></select>
                <span class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="UrlZdjecia" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="UrlZdjecia" id="formFileLg" type="file" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="UrlZdjecia" class="text-danger"></span>
                <span class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Index" class="btn btn-dark btn-lg border btn-outline-light">Powrót do listy</a>
                <input type="submit" value="Utwórz" class="btn btn-dark border-dark btn-lg btn-outline-light" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
