@model FirmaData.Data.CMS.Tatto

@{
    ViewData["Title"] = "Create";
}
<div class="d-flex justify-content-center align-items-center flex-column">
    <h2 class="mt-4">Dodawanie</h2>
    <div class="col-md-6">
        <form asp-action="Create" class="needs-validation text-white" novalidate>
            <div class="form-group">
                <label asp-for="IdKlient" class="form-label col-form-label-lg text-dark">Email Klienta</label>
                <select asp-for="IdKlient" class="form-select form-select-lg border-light btn-dark" asp-items="ViewBag.IdKlient"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdTattoArtists" class="form-label col-form-label-lg text-dark">Przydomek Artysty</label>
                <select asp-for="IdTattoArtists" class="form-select form-select-lg border-light btn-dark" asp-items="ViewBag.IdTattoArtists"></select>
            </div>
            <div class="form-group">
                <label asp-for="Styl" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Styl" class="form-control form-control-lg border-light btn-dark" />
                <span asp-validation-for="Styl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoURL" class="form-label col-form-label-lg text-dark">URL Zdjęcia</label>
                <input asp-for="FotoURL" id="formFileLg" type="file" class="form-control form-control-lg border-light bg-dark text-white" />
                <span asp-validation-for="FotoURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Data" class="form-control form-control-lg border-light btn-dark" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="form-label col-form-label-lg text-dark"></label>
                <input asp-for="Cena" class="form-control form-control-lg border-light btn-dark" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Index" class="btn btn-dark btn-lg border btn-outline-light">Powrót do listy</a>
                <input type="submit" value="Utwórz" class="btn btn-dark border-dark btn-lg btn-outline-light" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}