@model FirmaData.Data.CMS.Strona

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h2 class="mb-0">Potwierdzenie usunięcia</h2>
        </div>

        <div class="card-body">
            <p class="fs-5">Czy na pewno chcesz usunąć ten rekord?</p>
            <dl class="row mb-4">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LinkTytul)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LinkTytul)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Tytul)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tytul)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PodTytul)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PodTytul)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FotoURL)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FotoURL)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pozycja)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Pozycja)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Icon)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Icon)</dd>
            </dl>

            <form asp-action="Delete" class="d-flex gap-3">
                <a asp-action="Index" class="btn btn-dark btn-lg border-dark btn-outline-light">Anuluj</a>
                <button type="submit" class="btn btn-danger btn-lg border-dark btn-outline-light">Usuń</button>
            </form>
        </div>
    </div>
</div>
