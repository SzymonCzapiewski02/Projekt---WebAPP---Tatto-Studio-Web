<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projekt.PortalWWW.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom border-dark box-shadow fixed-top">
            <div class="container-fluid">
                @await Component.InvokeAsync("LogoComponent")
                @await Component.InvokeAsync("IconComponent")
            </div>
        </nav>
    </header>

    <div class="main d-flex">
        <div class="sidebar d-md-block position-fixed top-0 start-0 vh-100 collapse border-end border-light bg-dark text-white p-3" id="sidebar">
            <hr class="text-white" />
            @await Component.InvokeAsync("StronaMenuComponent")
        </div>
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @using FirmaData.Data.CMS
                @{
                    var strona = ViewBag.Strona as Strona;
                }
                @if (strona != null)
                {
                    <div class="carousel slide">
                        <div class="carousel-inner">
                            <div class="carousel-item active position-relative">
                                <img src="/Foto/@strona.FotoURL" class="d-block w-100 custom-height object-fit-cover" alt="...">
                                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                                    <h2 class="display-4 fw-bold"><i>@strona.Tytul</i></h2>
                                    <h1 class="display-1 fw-bold">@strona.PodTytul</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-black border-top border-light shadow-lg py-3">
        <div class="d-flex justify-content-center align-items-center">
            <div class="d-flex gap-3">
                @await Component.InvokeAsync("FooterComponent")
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
